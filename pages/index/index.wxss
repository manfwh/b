  height: 72rpx;
}
.entry .caption {
  margin-left: 10rpx;
}
.entry .caption view:first-child{
  font-size: 28rpx;
  color: #25c379;
  font-weight: bold;
}
.entry .caption view:last-child{
  font-size: 26rpx;
  color: #a8e7c9;
}

