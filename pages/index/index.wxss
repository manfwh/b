/*搜索框  */
.header {
  background: #285bed;
  padding-top: 24rpx;
}
.search-wrap {
  width: 702rpx;
  height: 56rpx;
  background: #284db4;
  margin: 0 auto;
  border-radius: 30rpx;
  border: 2px solid #3265f6;
  align-items: center;
}
.search-dots {
  padding: 0 17rpx;
}
.search-dots view {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 4rpx;
}
.search-dots view:first-child {
  background: #22d2bb
}
.search-dots view:last-child {
  background: #fff;
}
.input-search {
  flex: 1;
}
.search-wrap .voice {
  width: 30rpx;
  height: 32rpx;
  margin-right: 30rpx;
}


/* 数据展示  */
.block-title {
  background: #285bed;
  font-size: 28rpx;  
  padding-top: 20rpx;
}
.block-title .container {
  height: 54rpx;  
}
.block-title .dot {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border: 4rpx solid #7e9df4;
  margin-left: 13rpx;
  margin-right: 8rpx;
}
.block-main {
  position: relative;
}
.block-main .bg {
  width: 100%;
  height: 44rpx;
  background: #285bec;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.block-main .bg image {
  position: absolute;
  top: 43rpx;
}
.block-main .bg .bg-left {
  width: 25rpx;
  height: 150rpx;
  left: 0;
}
.block-main .bg .bg-right {
  width: 24rpx;
  height: 144rpx;
  right: 0;
}
.block-body {
  padding-top: 12rpx;
}
.chart {
  width: 702rpx;
  height: 360rpx;
  border-radius: 5px;
  background: #f1f5ff;
  margin: 0 auto;
  padding: 14rpx;
  box-shadow: 0 3px 10px 0 #cec5c5;
}
.canvas-wrap {
  border: 1px solid #d7f6e4;  
  border-radius: 5px;
  height: 100%;
}
