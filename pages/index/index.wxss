/* 我的管理  */
.title-wrap {
  height: 174rpx;
  position: relative;
}
.text-bg  {
  text-align: center;
  font-size: 158rpx;
  line-height: 174rpx;
  height: 174rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.text-bg text:first-child{
  color: #dbf8de;
}
.text-bg text:last-child{
