<view class="header">
  <view class="container">
    <view class="search-wrap justify-content-between">
      <view class="search-dots align-items-center">
        <view></view>
        <view></view>
      </view>
      <input class="input-search" placeholder='Want to go...' placeholder-style="color: #5682ff; font-size: 24rpx;"></input>
      <image class="voice" src="/images/icons/voice.png"></image>
    </view>
  </view>
</view>
<view class="bg-wrap">
  <view class="bg1"></view>
  <image src="/images/sections/bg.png" class="bg2"></image>
</view>
<view class="container">
  <!--核销储值 开始  -->
  <view class="justify-content-between scanCode">
    <view class="box flex-center box-shadow" bindtap='scanCode'>
      <view class="inbox flex-center box-shadow">
        <image src="/images/icons/hx.png"></image>
      </view>
      <view class="box-text">
        <view>TRAVEL SHOPING</view>
        <view class="flex-center">
          核
          <view class="split"></view>
          销
        </view>
      </view>
      <view class="box-btn flex-center">
        <image src="/images/icons/sao.png"></image>
      </view>
    </view>
    <view class="box flex-center box-shadow">
      <view class="inbox flex-center box-shadow">
        <image src="/images/icons/cz.png"></image>
      </view>
      <view class="box-text">
        <view>TRAVEL SHOPING</view>
        <view class="flex-center">
          储
          <view class="split"></view>
          值
        </view>
      </view>
      <view class="box-btn flex-center">
        <image src="/images/icons/sao.png"></image>
      </view>
    </view>
  </view>
  <!-- 核销储值 结束  -->
  <!--记录查询 开始  -->
  <view>
    <view class="item box-shadow flex-center-between" bindtap='navigateTo' data-url= "../hexiao/hexiao">
