      <view class="text1">DESIGE CHANGE OUR LIFE</view>
      <view class="text2">C H A N G E T H E W O R D</view>
      <view class="dots d-flex">
        <view></view>
        <view></view>
      </view>
      <view>每日 X 数据汇总展示</view>
    </view>
    <view class="day-info-right">
      <view class="row justify-content-between">
        <view class="row-left">
          消费
