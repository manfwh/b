        <image src="/images/icons/sr2.png"></image>
      </view>
      <view class="text">储值核销记录</view>
      <view class="dot br50"></view>
    </view>
    <view class="item box-shadow flex-center-between" bindtap='navigateTo' data-url= "../hyxf/hyxf">
      <view class="icon-wrap br50 flex-center">
        <image src="/images/icons/hy.png"></image>
      </view>
      <view class="text">会员消费记录</view>
      <view class="dot br50"></view>
    </view>
  </view>
  <!--记录查询 结束  -->
  <!-- 数据展示 开始  -->
  <view class="justify-content-between day-info">
    <image class="bg-pic" src="/images/guanli-car.jpg"></image>
